<div>
  <h1>{{book.title}}</h1>

  <p><strong>Author:</strong>
    <a href={{book.author.url}}>{{book.author.name}}</a>
  </p>
  <p><strong>Summary:</strong>
    {{book.summary}}
  </p>
  <p><strong>ISBN:</strong>
    {{book.isbn}}
  </p>
  <p><strong>Genre: &nbsp;</strong>
    {{#each book.genre}}
      <a href={{url}}>{{name}}</a>
    {{/each}}
  </p>

  <div>
    <h4>Copies</h4>
    {{#if book_instances}}
    {{#each book_instances}}
      <hr>
      {{#if (eqw status 'Available')}}
      <p class="has-text-success">{{status}}</p>
      {{else}}
      {{#if (eqw status 'Maintenance')}}
      <p class="has-text-warning">{{status}}</p>
      {{else}}
      <p class="has-text-danger">{{status}}</p>
      {{/if}}
      {{/if}}

      {{#if (eqw status 'Available')}}
      <p><strong>Due back:</strong> {{due_back_formatted}} </p>
      {{/if}}
      <p>Id: <a href={{url}}>{{_id}}</a></p>
    {{/each}}
    {{else}}
    <p>There are no copies of this book in the library.</p>
    {{/if}}
  </div>
</div>