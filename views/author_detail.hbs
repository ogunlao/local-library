<div>
  <h1>Author: {{author.name}}</h1>
  <p>{{author.date_of_birth_formatted}} - {{author.date_of_death_formatted}}</p>

  <div>
    <h4>Books</h4>
    <dl>
      {{#if author_books}}
      {{#each author_books}}
      <dt><a href={{url}}>{{title}}</a>
        <dd>{{summary}}</dd>
      </dt>
      {{/each}}
      {{else}}
      <p>This author has no books.</p>
      {{/if}}
    </dl>
  </div>
</div>