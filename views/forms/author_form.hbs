<div>
  <h1>{{title}}</h1>
  <form action="" method="post">
    <div class="form-group">
      <label for="first-name">First Name:</label>
      <input type="text" class="form-control" id="first_name" placeholder="First name (Christian) last" name="first_name" required="true" value={{author.first_name}}>
      <label for="family_name">Family Name:</label>
      <input type="text" id="family_name" class="form-control" placeholder='Family name (surname)' name='family_name' required='true' value={{author.family_name}}>
    </div>
    <div class="form-group">
      <label for="date_of_birth">Date of birth:</label>
      <input type="date" id="date_of_birth" class="form-control" name="date_of_birth" 
        value={{author.date_of_birth}} placeholder='dd/mm/yyyy'>

      <label for="date_of_death">Date of death:</label>
      <input type="date" id="date_of_death" class="form-control" name="date_of_death"
         value={{author.date_of_death}} placeholder='dd/mm/yyyy'>
    </div>
    <button type="submit">Submit</button>

    {{> error}}

  </form>
</div>