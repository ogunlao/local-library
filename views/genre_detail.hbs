<div>
  <h1>Genre: {{genre.name}}</h1>

  <div>
    <h4>Books</h4>
    <dl>
      {{#if genre_books}}
        {{#each genre_books}}
        <dt><a href={{url}}>{{title}}</a></dt>
        <dd>{{summary}}</dd>
        {{/each}}
      {{else}}
        This genre has no books.
      {{/if}}
    </dl>
  </div>

  <hr>
  <p><a href="{{genre.url}}/delete">Delete Genre</a></p>
  <p><a href="{{genre.url}}/update">Update Genre</a></p>

</div>