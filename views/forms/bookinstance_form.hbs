<div>
  <h1>{{title}}</h1>
  <form action="" method="post">
    <div class="form-group">
      <label for="book">Book:</label>
      <select name="book" id="book" class="form-control" placeholder="Select book" 
        name="book" required="true">

        {{#each book_list}}
            {{option _id title ../bookinstance.book}}
        {{/each}}

      </select>
      </div>
      <div class="form-group">
        <label for="imprint">Imprint:</label>
        <input type="text" id="imprint" class="form-control" 
          placeholder="Publisher and date information" name="imprint" required="true"
          {{#if bookinstance}} value="{{bookinstance.imprint}}" {{else}} value=""{{/if}}>
      </div>
      <div class="form-group">
        <label for="due_back">Date when book available:</label>
        <input type="date" id="due_back" class="form-control" name="due_back" placeholder="mm/dd/yyyy" 
        {{#if bookinstance.due_back}} value={{formatDate 'YYYY-MM-DD' bookinstance.due_back}} {{else}} value=""{{/if}}>
      </div>
      <div class="form-group">
        <label for="status">Status:</label>
        <select name="status" id="status" class="form-control" 
          type="select" placeholder="Select status" required="true">
          {{#each bookinst_status_list}}
            {{option this this ../bookinstance.status}}
          {{/each}}
        </select>
      </div>
      <button type="submit">Submit</button>

      {{> error_partial}}

  </form>
</div>