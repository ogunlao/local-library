<div>
  <h1>{{title}}</h1>
  <form action="" method="post">
    <div class="form-group">
      <label for="book">Book:</label>
      <select name="book" id="book" class="form-control" placeholder="Select book" 
        name="book" required="true">
        {{#each book_list}}
          {{#if bookinstance}}
            <option value={{_id}} selected={{#if eqw (_id bookinstance.book)}} "selected"{{/if}}>{{title}}</option>
            {{else}}
            <option value={{_id}}>{{title}}</option>
          {{/if}}
        {{/each}}
      </select></div>
      <div class="form-group">
        <label for="imprint">Imprint:</label>
        <input type="text" id="imprint" class="form-control" 
          placeholder="Publisher and date information" name="imprint" required="true"
          {{#if bookinstance}} value={{bookinstance.imprint}} {{else}} value=""{{/if}}>
      </div>
      <div class="form-group">
        <label for="due_back">Date when book available:</label>
        <input type="date" id="due_back" class="form-control" name="due_back" placeholder="mm/dd/yyyy" 
        {{#if bookinstance}} value={{bookinstance.due_back}} {{else}} value=""{{/if}}>
      </div>
      <div class="form-group">
        <label for="status">Status:</label>
        <select name="status" id="status" class="form-control" 
          type="select" placeholder="Select status" required="true">
          <option value="Maintenance">Maintenance</option>
          <option value="Available">Available</option>
          <option value="Loaned">Loaned</option>
          <option value="Reserved">Reserved</option>
        </select>
      </div>
      <button type="submit">Submit</button>

      {{> error}}

  </form>
</div>